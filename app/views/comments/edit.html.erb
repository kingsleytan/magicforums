<div class="edit">

  <div class="background-edit">
    <h1 style="color: black">Edit: <%= @comment.body %></h1>
  </div>

  <div class="form-edit">
    <%= form_for(@comment, url: topic_post_comment_path(@topic, @post, @comment), html: { id: "comment-update-form" }) do |f| %>
    <h1 class="text-center">
      Update Your Comment Here
    </h1>

    <div class="form-group">
       <h4 class="text-center"> Comment Image </h4>
       <div id="preview-image">
         <% if @comment.image? %>
           <%= image_tag @comment.image, class: "img-settings img-responsive center-block" %>
         <% end %>
       </div>
     </div>

   <div class="form-group">
     <%= f.file_field :image, id: "comment_image_field", class: 'form-control image-uploader' %>
   </div>

    <div class="form-group">
      <h4> <%= f.label :text_field, "Body" %> </h4>
      <%= f.text_field :body, id: "comment_body_field", class: 'form-control' %>
    </div>

    <div class="font-feature-edit text-center">
      <%= link_to "Back to all comments", topic_post_comments_path, class: "btn btn-success btn-lg"%>
      <%= f.submit "Update Comment", class: "btn btn-success btn-lg" %>
    </div>
    <% end %>
  </div>

</div>
