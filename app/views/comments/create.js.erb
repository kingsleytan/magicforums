$('#flash-messages-container').html("<%=j render partial: 'partials/flash_messages' %>")

<% if @comment.persisted? %>
  $('#comments').append("<%=j render partial: 'comment', locals: { comment: @comment, post: @comment.post, topic: @topic } %>")
  $('#comments-form-container').html("<%=j render partial: 'create_form', locals: { comment: @new_comment, post: @post } %>")
<% end %>
