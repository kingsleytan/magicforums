<div class="new">
  <div class="preview-image">
    <div class="image-uploader">
  <div class="background-new">
    <h1 style="color: black">Create Post</h1>
  </div>

  <%= form_for(@post, url: topic_posts_path(@topic, @post), html: { id: "post-create-form" }) do |f| %>
    <div class="form-group">
      <h4> <%= f.label :title_field, "Title" %> </h4>
      <%= f.text_field :title, required: true, id: "post_title_field", class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4> <%= f.label :text_field, "Body" %> </h4>
      <%= f.text_field :body, id: "post_body_field", class: 'form-control' %>
    </div>

    <div class="font-feature-new text-center">
      <%= link_to "Back to all posts", topic_posts_path, class: "btn btn-info btn-lg"%>
      <%= f.submit "Create Post", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
</div>
</div>
